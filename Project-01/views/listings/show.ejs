<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-3 mt-3">
        <h3>Listing Details</h3>
    </div>
    <div class="card col-6 offset-3 show-card">
        <img class="card-img-top show-img" src="<%= listing.image %>" alt="listing_image">
        <div class="card-body">
            <p class="card-text"> 
                <b> <%= listing.title %> </b><br>
                <%= listing.description %><br>
                &#x20B9 <%= listing.price.toLocaleString('en-IN') %><br>
                <%= listing.location %><br>
                <%= listing.country %>

            </p>
        </div>
    </div>
    <br>
</div>
<div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-4 edit">Edit</a>
        <br><br>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark offset-5 delete">Delete</button>
    </form>
</div>
